{% extends 'base.html.twig' %}

{% block title %}Jeu de carte{% endblock %}

{% block body %}
    <div class="maincontainer">
        <div class="col-md-10 offset-md-1">
            <h2 class="text-center card-title">&hearts;&spades; Card Game  &diams;&clubs;</h2>
            <div class="form-group">
                <div class="col-md-9 offset-md-3">
                    <a href="{{ path('filter', {name: 'couleur'}) }}" class="btn btn-primary">Filtrer par Couleurs</a>
                    <a href="{{ path('filter', {name: 'valeur'}) }}" class="btn btn-info">Filtrer par Valeurs</a>
                    <a href="{{path('reset_home')}}" class="btn btn-danger">Tirer un nouveau jeu de cartes</a>
                </div>
            </div>
            <div class="row">
                {% set hands = app.session.get('PlayerHand') %}
                {% for hand in hands %}
                    <div class="col-md-2 item-card">
                        <div class="span-left {{hand["couleur"]}}">{{hand["nom"]}}</div>
                        <div id="color" class="span-center {{hand["couleur"]}}">{{hand["couleur"]}}</div>
                        <div class="span-right {{hand["couleur"]}}">{{hand["nom"]}}</div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}